generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  fullName      String
  email         String    @unique
  password      String?
  role          UserRole  @default(USER)
  image         String?
  provider      String?
  emailVerified DateTime?
  workouts      Workout[]
  exerciseType  ExerciseType[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Workout {
  id          Int          @id @default(autoincrement())
  title       String
  color       String
  userId      Int
  user        User         @relation(fields: [userId], references: [id])
  days        WorkoutDay[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("workouts")
}

model WorkoutDay {
  id          Int       @id @default(autoincrement())
  date        DateTime?
  workoutId   Int?
  workout     Workout?   @relation(fields: [workoutId], references: [id])
  exercises   Exercise[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("workout_days")
}

model ExerciseType {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  exercises   Exercise[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("exercise_types")
}

model Exercise {
  id             Int          @id @default(autoincrement())
  workoutDayId   Int
  exerciseTypeId Int
  workoutDay     WorkoutDay   @relation(fields: [workoutDayId], references: [id])
  exerciseType   ExerciseType @relation(fields: [exerciseTypeId], references: [id])
  setGroup       Sets[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("exercises")
}

model Sets {
  id         Int       @id @default(autoincrement())
  exerciseId Int
  exercise   Exercise  @relation(fields: [exerciseId], references: [id])
  sets       Set[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("set_group")
}

model Set {
  id         Int    @id @default(autoincrement())
  type       String
  order      Int
  weight     Float?
  reps       Int?
  isTriSet   Boolean @default(false)

  subSets    SubSet[] @relation(name: "TrisetSubsets")
  dropSets   DropSet[]   // ðŸ”¥ Ð”Ð¾Ð±Ð°Ð²Ð¸Ð»Ð¸ dropsets

  setGroupId Int
  setGroup   Sets @relation(fields: [setGroupId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("sets")
}

model SubSet {
  id     Int    @id @default(autoincrement())
  setId  Int
  set    Set @relation(fields: [setId], references: [id], name: "TrisetSubsets")
  weight Float?
  reps   Int?
  order  Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sub_sets")
}

model DropSet {
  id         Int     @id @default(autoincrement())
  parentSetId Int
  parentSet   Set      @relation(fields: [parentSetId], references: [id])
  weight     Float?
  reps       Int?
  order      Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("drop_sets")
}

enum UserRole {
  USER
  ADMIN
}
